<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bill.mapper.SysUserMapper">
    <resultMap id="BaseResultMap" type="com.bill.entity.SysUser">
        <id column="id" jdbcType="VARCHAR" property="id" />
        <result column="username" jdbcType="VARCHAR" property="username" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="age" jdbcType="INTEGER" property="age" />
        <result column="sex" jdbcType="INTEGER" property="sex" />
        <result column="email" jdbcType="VARCHAR" property="email" />
        <result column="photo" jdbcType="VARCHAR" property="photo" />
        <result column="real_name" jdbcType="VARCHAR" property="realName" />
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
        <result column="update_date" jdbcType="TIMESTAMP" property="updateDate" />
        <result column="del_flag" jdbcType="TINYINT" property="delFlag" />
    </resultMap>

    <sql id="Base_Column_List">
        id, username, password, age, email, photo, real_name,  create_date, update_date, del_flag
    </sql>
    <!-- 根据id查询 -->
    <select id="selectById" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from sys_user
        where id = #{id,jdbcType=VARCHAR}
    </select>
    <!-- 检查用户是否存在 -->
    <select id="checkUser" parameterType="java.lang.String" resultType="java.lang.Integer">
        select count(1) from sys_user where username=#{username}
    </select>
    <!-- 根据用户名查询 -->
    <select id="selectByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_user
        where username=#{username,jdbcType=VARCHAR}
    </select>
    <!-- 查询用户数量 -->
    <select id="count" resultType="java.lang.Long">
        select count(*) from sys_user
    </select>
    <!-- 删除 -->
    <delete id="deleteById" parameterType="java.lang.String">
        delete from sys_user
        where id = #{id,jdbcType=VARCHAR}
    </delete>
     <!-- 添加 -->
    <insert id="insert" parameterType="com.bill.entity.SysUser">
        <selectKey keyProperty="id" resultType="string" order="BEFORE">
            select replace(uuid(), '-', '') as id from dual
        </selectKey>
        insert into sys_user (id, username, password,age,sex, email, photo,real_name,create_date, update_date, del_flag)
        values (#{id}, #{username}, #{password},#{age},#{sex}, #{email}, #{photo},#{realName},SYSDATE(),SYSDATE(), 0)
    </insert>
    <!-- 修改个人信息 -->
    <update id="update" parameterType="com.bill.entity.SysUser">
        update sys_user
        set
        sex = #{sex},
        age = #{age},
        email = #{email},
        photo = #{photo},
        real_name = #{realName},
        update_date = SYSDATE()
        where id = #{id}
    </update>
    <!-- 修改密码 -->
    <update id="rePass" parameterType="com.bill.entity.SysUser">
        update sys_user set password=#{password} where id = #{id}
    </update>
</mapper>